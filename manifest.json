{
    "manifest_version": 3,
    "name": "AI Translator",
    "version": "1.0.0",
    "description": "Dịch văn bản bằng Google AI (Gemini)",
    "permissions": ["storage", "activeTab"],
    "host_permissions": ["https://generativelanguage.googleapis.com/*"],
    "action": {
        "default_popup": "popup.html",
        "default_icon": {
            "16": "icon16.png",
            "48": "icon48.png",
            "128": "icon128.png"
        }
    },
    "content_scripts": [
        {
            "matches": ["<all_urls>"],
            "js": ["content.js"],
            "css": ["content.css"]
        }
    ],
    "background": {
        "service_worker": "background.js"
    },
    "icons": {
        "16": "icon16.png",
        "48": "icon48.png",
        "128": "icon128.png"
    },
    "commands": {
        "translate-text": {
            "suggested_key": {
                "default": "Alt+Shift+T"
            },
            "description": "Dịch văn bản đã chọn"
        }
    }
}
